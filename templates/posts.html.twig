<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
        {% endblock %}
    </head>
    <body>
        {% block body %}
        
<h1>Total Posts : {{total_posts}}</h1>
{% if total_posts==0 %}
<h2>There is no posts</h2>

{% endif %}
<table>
{% for post in posts%}
    <tr> 
        <td>{{post.title}} ||</td>
        <td>{{post.content}} ||</td>
        <td>{{post.date|date('Y-m-d') }}</td>
        <td>
        <form method="post" action="{{ path('delete-post', { id: post.id }) }}" onsubmit="return confirm('Are you sure?');">
        <input type="hidden" name="_method" value="DELETE">
        <button class="btn btn-danger btn-sm">Delete</button>
        </form>
        </td>
    </tr>
{% endfor %}
</table>
           
        {% endblock %}
    </body>
</html>
